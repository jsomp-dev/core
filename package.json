{
  "name": "@jsomp/core",
  "version": "1.0.5",
  "description": "JSOMP Core Runtime Container - A stateless, tree-shakable, and injectable JSON-to-Component engine.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "scripts": {
    "dev": "tsup src/index.ts src/renderer/react/index.ts src/engine/compiler/plugins/*.ts --format esm --watch --dts --external zod --external react --external react-dom --splitting",
    "dev:ui": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "build": "tsup src/index.ts src/renderer/react/index.ts src/engine/compiler/plugins/*.ts --format esm --clean --dts --minify --external zod --external react --external react-dom --splitting",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/renderer/react/index.d.ts",
      "import": "./dist/renderer/react/index.js"
    },
    "./plugins": {
      "types": "./dist/engine/compiler/plugins/index.d.ts",
      "import": "./dist/engine/compiler/plugins/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "jsomp",
    "reactive",
    "renderer",
    "json-to-component",
    "tree-shaking",
    "ioc"
  ],
  "author": "WiseTheWizard",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsomp-dev/core.git"
  },
  "bugs": {
    "url": "https://github.com/jsomp-dev/core/issues"
  },
  "homepage": "https://github.com/jsomp-dev/core#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    },
    "zod": {
      "optional": false
    }
  },
  "devDependencies": {
    "@size-limit/preset-app": "^12.0.0",
    "@size-limit/preset-big-lib": "^12.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^28.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^12.0.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zod": "^3.24.2"
  },
  "sideEffects": [
    "./dist/**/*.js",
    "*.css"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "15 kB"
    },
    {
      "path": "dist/renderer/react/index.js",
      "limit": "15 kB"
    }
  ]
}